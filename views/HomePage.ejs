<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Home Page</title>
    <style>
  body{background-color: 	#FFC0CB}
  table, td{border: 1px solid black}
  h1{text-decoration: underline}
  table{text-align: center}
</style>
  </head>
  <body>
    <h1>Home Page</h1>
<table>
  <thead>
    <tr>
      <th>Company</th>

      <th>Description</th>

      <th>Suite</th>
    </tr>
  </thead>
  <tbody>


  <% for(let i=0;i<companies.length;i++){ %>
  <tr>
    <td><%= companies[i].name %></td>
<td><%= companies[i].description %></td>

<td><%= companies[i].suiteNumber %></td>

<td><a href="/companyprofile/<%= companies[i].id %>">Profile Page</a></td>
  </tr>
<% } %>
  </tbody>
</table>
<form action="/homepage" method="post">
  <input type="text" name="name" placeholder="name">
  <input type="text" name="description" placeholder="description">
  <input type="number" name="suiteNumber" placeholder="suiteNumber">
  <input type="submit" value="Create">
</form>
  </body>
</html>
